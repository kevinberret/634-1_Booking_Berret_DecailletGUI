@model BerretDecailletBookingGUI.Models.Reservation

@{
    ViewBag.Title = "Delete";
}

<h2>Delete a reservation</h2>

<h3>Please fill in this form to delete your reservation</h3>
<div>
    @using (Html.BeginForm("Delete", "Reservations", FormMethod.Post))
    { 
        <div class="row">
            <div class="col s12 input-field">
                @Html.TextBoxFor(r => r.IdReservation, new { @value = "" })
                @Html.LabelFor(r => r.IdReservation)
            </div>
        </div>

        <div class="row">
            <div class="col s12 input-field">
                @Html.TextBoxFor(r => r.Fisrtname)
                @Html.LabelFor(r => r.Fisrtname)
            </div>
        </div>

        <div class="row">
            <div class="col s12 input-field">
                @Html.TextBoxFor(r => r.Lastname)
                @Html.LabelFor(r => r.Lastname)
            </div>
        </div>
        <button class="btn red waves-effect waves-light" type="submit" name="action">
            Cancel reservation
            <i class="material-icons right">delete</i>
        </button>
    }
</div>