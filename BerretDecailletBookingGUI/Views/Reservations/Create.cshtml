@model BerretDecailletBookingGUI.ViewModel.ReservationVM

@{ 
    var reservation = Model.Reservation;
}

@using (Html.BeginForm("Reserve", "Reservations", FormMethod.Post))
{
    for (int i = 0; i < Model.Rooms.Count; i++)
    {
        @Html.HiddenFor(model => Model.Rooms[i].IdRoom)
    }

    @Html.HiddenFor(m => m.Reservation.CheckIn)
    @Html.HiddenFor(m => m.Reservation.CheckOut)

        <h4>Reservation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col s12 input-field">
                @Html.EditorFor(model => model.Reservation.Fisrtname, new { htmlAttributes = new { @class = "validate" } })
                @Html.ValidationMessageFor(model => model.Reservation.Fisrtname, "", new { @class = "text-danger" })
                @Html.LabelFor(model => model.Reservation.Fisrtname)
            </div>
        </div>

        <div class="row">
            <div class="col s12 input-field">                
                @Html.EditorFor(model => model.Reservation.Lastname, new { htmlAttributes = new { @class = "validate" } })
                @Html.ValidationMessageFor(model => model.Reservation.Lastname, "", new { @class = "text-danger" })
                @Html.LabelFor(model => model.Reservation.Lastname)
            </div>
        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action">
            Make reservation
            <i class="material-icons right">send</i>
        </button>
}
@section scripts{
    <script>
        $(document).ready(function () {
            $('select').material_select();

            $('.datepicker').pickadate({
                today: 'Today',
                clear: 'Clear',
                close: 'Ok',
                closeOnSelect: false // Close upon selecting a date,
            });

            // snippet found https://github.com/amsul/pickadate.js/issues/690
            // to update automatically when datepicker is modified
            $('.datepicker').on('change', function () {
                if ($(this).attr('id') === @Html.IdFor(model => model.Reservation.CheckIn)) {
                    $('#CheckOut').pickadate('picker').set('min', $(this).val());
                }
                if ($(this).attr('id') === @Html.IdFor(model => model.Reservation.CheckOut)) {
                    $('#CheckIn').pickadate('picker').set('max', $(this).val());
                }
            });

            $('.datepicker').on('close', function () {
                this.$holder.blur();
            });
        });
    </script>

}