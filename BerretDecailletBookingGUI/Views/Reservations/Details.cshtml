@model BerretDecailletBookingGUI.Models.Reservation

@{
    ViewBag.Title = "Details";
}

<h2>Your reservation was successful!</h2>
    
<div>
    <h4>Reservation n°@Html.DisplayFor(model => model.IdReservation) 
        <div class="chip red">
            Please note this number to cancel the reservation
            <i class="close material-icons">close</i>
        </div>
    </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Fisrtname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fisrtname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lastname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lastname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CheckIn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CheckIn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CheckOut)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CheckOut)
        </dd>

    </dl>
    <h4>Your rooms</h4>
    <table>
        <tr>
            <th>Number</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
        @foreach (var r in Model.Rooms)
        {
            <tr>
                <td>@r.Number</td>
                <td>@r.Description</td>
                <td>@r.Price</td>
            </tr>
        }
        
    </table>
</div>
<p>
    @Html.ActionLink("Back to Home", "Index", "Home")
</p>
