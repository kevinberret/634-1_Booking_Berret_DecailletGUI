@model BerretDecailletBookingGUI.Models.Hotel

@{
    ViewBag.Title = Model.Name;
    String starsIcon = "";
    String wifiIcon = "signal_wifi_4_bar";
    String wifiIconColor = "text-darken-3";
    String parkingIconColor = "text-darken-3";

    for (int i = 0; i < Model.Category; i++)
    {
        starsIcon += "<i class='material-icons'>star</i>";
    }

    for (int i = 5; i > Model.Category; i--)
    {
        starsIcon += "<i class='material-icons'>star_border</i>";
    }

    if (!((bool)Model.Wifi))
    {
        wifiIcon = "signal_wifi_off";
        wifiIconColor = "text-lighten-2";
    }

    if (!(bool)Model.Parking)
    {
        parkingIconColor = "text-lighten-2";
    }
}

<div class="body-content container">
    <h2>@Html.DisplayFor(model => model.Name) @Html.Raw(new HtmlString(starsIcon))</h2>

    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="col s6">
                    @Html.DisplayFor(model => model.Description)
                </div>
                <div class="col s6">
                    <div class="row">
                        <div class="col s12">
                            <div class="card">
                                <div class="card-image">
                                    <img src="images/sample-1.jpg">
                                    <span class="card-title">Hotel informations</span>
                                </div>
                                <div class="card-content">
                                    <div class="row">
                                        <div class="col s2">
                                            <i class="material-icons grey-text text-darken-3">location_on</i>
                                        </div>
                                        <div class="col s10">
                                            @Html.DisplayFor(model => model.Location)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s2">
                                            <i class="material-icons grey-text @wifiIconColor">@wifiIcon</i>
                                        </div>
                                        <div class="col s10">
                                            Wi-Fi
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s2">
                                            <i class="material-icons grey-text @parkingIconColor">local_parking</i>
                                        </div>
                                        <div class="col s10">
                                            Parking
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s2">
                                            <i class="material-icons grey-text text-darken-3">local_phone</i>
                                        </div>
                                        <div class="col s10">
                                            @Html.DisplayFor(model => model.Phone)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s2">
                                            <i class="material-icons grey-text text-darken-3">email</i>
                                        </div>
                                        <div class="col s10">
                                            @Html.DisplayFor(model => model.Email)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s2">
                                            <i class="material-icons grey-text text-darken-3">public</i>
                                        </div>
                                        <div class="col s10">
                                            @Html.DisplayFor(model => model.WebSite)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>